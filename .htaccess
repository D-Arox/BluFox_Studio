# BluFox Studio - Fixed Apache Configuration
RewriteEngine On

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://apis.roblox.com https://authorize.roblox.com https://*.roblox.com; frame-src https://*.roblox.com; form-action 'self' https://*.roblox.com"
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Deny access to hidden files (dotfiles)
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Deny access to sensitive files
<FilesMatch "^(composer\.(json|lock)|package\.(json|lock)|\.env.*|.*\.log)$">
    Require all denied
</FilesMatch>

# Deny access to common backup and temporary files
<FilesMatch "\.(bak|backup|old|orig|save|swp|tmp)$">
    Require all denied
</FilesMatch>

# Deny access to sensitive directories (but explicitly allow dashboard, auth, admin)
<DirectoryMatch "^(?!.*(dashboard|admin|auth|assets|includes|errors|pages|portfolio|profile|services|vantara))(database|logs|cache|vendor|node_modules)">
    Require all denied
</DirectoryMatch>

# Block bad bots
<IfModule mod_setenvif.c>
    SetEnvIfNoCase User-Agent "^$" badbot
    SetEnvIfNoCase User-Agent "Scrapy" badbot
    SetEnvIfNoCase User-Agent "AhrefsBot" badbot
    SetEnvIfNoCase User-Agent "MJ12bot" badbot
    SetEnvIfNoCase User-Agent "DotBot" badbot

    <RequireAll>
        Require all granted
        Require not env badbot
    </RequireAll>
</IfModule>

# PRIORITY 1: Direct file access - if file exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# PRIORITY 2: Direct directory access - if directory exists, serve it
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# PRIORITY 3: Error page routes (for testing) - BEFORE other routes to prevent conflicts
RewriteRule ^error/400/?$ errors/400.php [L,QSA]
RewriteRule ^error/401/?$ errors/401.php [L,QSA]
RewriteRule ^error/402/?$ errors/402.php [L,QSA]
RewriteRule ^error/403/?$ errors/403.php [L,QSA]
RewriteRule ^error/404/?$ errors/404.php [L,QSA]
RewriteRule ^error/500/?$ errors/500.php [L,QSA]

# PRIORITY 4: Authentication routes (HIGHEST PRIORITY for URL rewriting)
RewriteRule ^auth/login/?$ auth/login.php [L,QSA]
RewriteRule ^auth/callback/?$ auth/callback.php [L,QSA]
RewriteRule ^auth/logout/?$ auth/logout.php [L,QSA]
RewriteRule ^auth/set-remember-preference/?$ auth/set-remember-preference.php [L,QSA]
RewriteRule ^auth/set-remember-session/?$ auth/set-remember-session.php [L,QSA]

# PRIORITY 5: Dashboard routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^dashboard/?$ dashboard/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^dashboard/([^/]+)/?$ dashboard/$1.php [L,QSA]

# PRIORITY 6: Admin routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/?$ admin/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/([^/]+)/([^/]+)/?$ admin/$1/$2.php [L,QSA]

# PRIORITY 7: API routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([^/]+)/?$ api/$1.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([^/]+)/([^/]+)/?$ api/$1/$2.php [L,QSA]

# PRIORITY 8: Portfolio routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^portfolio/?$ portfolio/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^portfolio/([^/]+)/?$ portfolio/project.php?slug=$1 [L,QSA]

# PRIORITY 9: Services routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^services/?$ services/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^services/([^/]+)/?$ services/service.php?slug=$1 [L,QSA]

# PRIORITY 10: Vantara routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^vantara/?$ vantara/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^vantara/([^/]+)/?$ vantara/$1.php [L,QSA]

# PRIORITY 11: Static pages
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^about/?$ pages/about.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^contact/?$ pages/contact.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^privacy/?$ pages/privacy.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^terms/?$ pages/terms.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^pricing/?$ pages/pricing.php [L,QSA]

# PRIORITY 12: Profile routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^profile/?$ profile/index.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^profile/([^/]+)/?$ profile/$1.php [L,QSA]

# PRIORITY 13: Remove trailing slashes (LAST PRIORITY)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"

    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"

    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType application/font-woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"

    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json application/xml application/rss+xml font/woff font/woff2 image/svg+xml image/x-icon
</IfModule>

# Error documents - All error pages with proper path
ErrorDocument 400 /errors/400.php
ErrorDocument 401 /errors/401.php
ErrorDocument 402 /errors/402.php
ErrorDocument 403 /errors/403.php
ErrorDocument 404 /errors/404.php
ErrorDocument 500 /errors/500.php

# PHP settings
<IfModule mod_php.c>
    php_flag expose_php off
    php_flag register_globals off
    php_flag magic_quotes_gpc off

    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value memory_limit 256M
    php_value max_execution_time 30

    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.use_strict_mode 1
</IfModule>

# Security protection (MOVED TO END to avoid conflicts)
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} ^.*(\[|\]|\(|\)|<|>|Ãª|"|;|\?|\*|=$).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(&#x22;|&#x27;|&#x3C;|&#x3E;|&#x5C;|&#x7B;|&#x7C;).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(%24&x).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(127\.0).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(localhost).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(loopback).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(\|id\|whoami).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(cccccc).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(union.*select).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(select.*from).* [NC,OR]
    RewriteCond %{QUERY_STRING} ^.*(drop.*table).* [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>