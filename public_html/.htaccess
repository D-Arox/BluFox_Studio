# Enable RewriteEngine
RewriteEngine On

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# HSTS for HTTPS (only in production)
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://apis.roblox.com https://www.roblox.com; frame-ancestors 'none'; base-uri 'self'"

# Remove Server Header
ServerTokens Prod
Header unset Server

# Compression
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Video
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 0 seconds"
    
    # Data
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType text/xml "access plus 0 seconds"
    
    # Default
    ExpiresDefault "access plus 2 days"
</IfModule>

# ETag
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Block access to sensitive files
<FilesMatch "^(\.|config\.php|\.env|composer\.json|composer\.lock|package\.json|package-lock\.json|yarn\.lock|webpack\.config\.js|gulpfile\.js|Gruntfile\.js|README\.md|CHANGELOG\.md|LICENSE\.md)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to version control directories
RewriteRule ^(.*/)?\.svn/ - [F,L]
RewriteRule ^(.*/)?\.git/ - [F,L]
RewriteRule ^(.*/)?\.hg/ - [F,L]

# Block access to backup and temporary files
<FilesMatch "\.(bak|backup|swp|tmp|temp|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Force HTTPS (uncomment in production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slashes (except for directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Remove index.php from URLs
RewriteCond %{THE_REQUEST} /([^?\s]*?)(/index\.php)?([\??\s].*)?$ [NC]
RewriteRule ^(.*)index\.php$ /%1 [R=301,L]

# Pretty URLs routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# API routes
RewriteRule ^api/(.*)$ /api/index.php [L,QSA]

# Auth routes
RewriteRule ^auth/login/?$ /pages/auth/login.php [L,QSA]
RewriteRule ^auth/logout/?$ /pages/auth/logout.php [L,QSA]
RewriteRule ^auth/roblox/callback/?$ /pages/auth/login.php [L,QSA]

# Dashboard routes
RewriteRule ^dashboard/?$ /pages/dashboard/index.php [L,QSA]
RewriteRule ^dashboard/game/([0-9]+)/?$ /pages/dashboard/game.php?id=$1 [L,QSA]

# Admin routes
RewriteRule ^admin/?(.*)$ /pages/admin/index.php [L,QSA]

# Product routes
RewriteRule ^products/?$ /pages/products/index.php [L,QSA]
RewriteRule ^products/([a-zA-Z0-9-]+)/?$ /pages/products/view.php?slug=$1 [L,QSA]

# Portfolio routes
RewriteRule ^portfolio/?$ /pages/portfolio/index.php [L,QSA]
RewriteRule ^portfolio/([a-zA-Z0-9-]+)/?$ /pages/portfolio/view.php?slug=$1 [L,QSA]

# Documentation routes
RewriteRule ^documentation/?(.*)$ /pages/docs/index.php?path=$1 [L,QSA]
RewriteRule ^docs/?(.*)$ /pages/docs/index.php?path=$1 [L,QSA]

# Download routes (protected)
RewriteRule ^download/([0-9]+)/?$ /pages/download/index.php?id=$1 [L,QSA]

# Static page routes
RewriteRule ^about/?$ /pages/about.php [L,QSA]
RewriteRule ^contact/?$ /pages/contact.php [L,QSA]
RewriteRule ^privacy/?$ /pages/privacy.php [L,QSA]
RewriteRule ^terms/?$ /pages/terms.php [L,QSA]
RewriteRule ^vault/?$ /pages/vault.php [L,QSA]

# Profile routes
RewriteRule ^profile/?$ /pages/profile/index.php [L,QSA]
RewriteRule ^settings/?$ /pages/profile/settings.php [L,QSA]

# Error pages
ErrorDocument 400 /pages/errors/500.php
ErrorDocument 401 /pages/errors/500.php
ErrorDocument 402 /pages/errors/500.php
ErrorDocument 403 /pages/errors/403.php
ErrorDocument 404 /pages/errors/404.php
ErrorDocument 500 /pages/errors/500.php